.ext-footer
  padding 60px 0
  margin-top 30px
  font-size 1em
  background-color #dbbcd5;
  border-top: 1px solid rgba(0, 0, 0, 0.1)

  .primer-footer
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content space-between

  .institutional
    flex-grow 2

    p
      max-width 560px

    .text-muted.small a
      font-weight: normal;
      font-size: 14px;

  a
    color black
    font-size: 16px;
    &:hover
      color $main-link-color
      text-decoration underline

  .logo
    span
      display block
      color #aaa
      &:hover
        opacity 1

  .gob
    padding-right 30px
    margin-bottom 30px

    img
      max-width 100%
      width 300px

  .menu
    padding 0 15px
    text-align left

    &:first-of-type
      flex-grow 3

    a
      display block
      padding 6px 0
      font-weight 600

  .social-logos
    float: left;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    width: 100%
    justify-content: center;
    @media screen and (max-width: 687px)
      margin-top: 30px

    .logo-instagram, .logo-facebook
      margin-left: 32px;

    svg
      height: 45px
      width: 45px
    .logo-twitter svg
      /*color original - fill:rgb(29, 161, 242)*/
      fill:black
    .logo-instagram svg
      /*color original - fill:#e81b86*/
      fill:black
    .logo-facebook svg, .logo-facebook svg path
      fill:black



  @media only screen and (max-width: 687px)
    .primer-footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .menu
      padding-right 0
      a
        display block
        line-height 1em

    .gob
      img
        width 300px

    .institutional
      padding 0 15px
